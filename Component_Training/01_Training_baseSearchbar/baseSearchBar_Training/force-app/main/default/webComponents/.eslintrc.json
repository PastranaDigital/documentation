{
    "extends": ["@salesforce/eslint-config-lwc/recommended"],
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
                "@lwc/lwc/no-unexpected-wire-adapter-usages": "off"
            },
            "env": {
                "node": true
            }
        }
    ],
    "rules": {
        "no-unused-expressions": [
            2,
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ]
    }
}
